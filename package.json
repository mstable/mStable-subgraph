{
  "name": "mstable-graph",
  "version": "0.1.0",
  "scripts": {
    "provision": "sh ./scripts/provision.sh",
    "truffle:migrate": "cd lib/mStable-contracts && yarn migrate",
    "truffle:script": "cd lib/mStable-contracts && yarn script",
    "codegen": "yarn graph codegen",
    "build": "yarn graph build",
    "create-local": "yarn graph create jameslefrere/mStable --node http://127.0.0.1:8020",
    "deploy-local": "yarn graph deploy jameslefrere/mStable --ipfs http://localhost:5001 --node http://127.0.0.1:8020"
  },
  "doNotRunMe": {
    "create": "graph create jameslefrere/mStable --node https://api.thegraph.com/deploy/",
    "deploy": "graph deploy jameslefrere/mStable --ipfs https://api.thegraph.com/ipfs/ --node https://api.thegraph.com/deploy/"
  },
  "devDependencies": {
    "@graphprotocol/graph-cli": "git@github.com:JamesLefrere/graph-cli.git#fix-tuple-arrays-for-0.17.1",
    "@graphprotocol/graph-ts": "^0.17.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,json}": [
      "prettier --write --config ./.prettierrc",
      "git add"
    ]
  }
}
